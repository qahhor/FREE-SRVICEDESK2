# Service Desk Platform - Environment Variables
# Copy this file to .env and update the values

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=servicedesk
POSTGRES_USER=servicedesk
POSTGRES_PASSWORD=servicedesk
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/servicedesk
SPRING_DATASOURCE_USERNAME=servicedesk
SPRING_DATASOURCE_PASSWORD=servicedesk

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# AI Service Configuration
# ============================================
# Provider: openai or mock
AI_PROVIDER=mock

# OpenAI settings (required if AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT=30
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3

# ============================================
# Service Ports
# ============================================
TICKET_SERVICE_PORT=8081
AI_SERVICE_PORT=8084

# ============================================
# Service URLs (for inter-service communication)
# ============================================
AI_SERVICE_URL=http://localhost:8084

# ============================================
# Spring Profiles
# ============================================
# Options: dev, production
SPRING_PROFILES_ACTIVE=dev

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Elasticsearch (optional)
# ============================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
